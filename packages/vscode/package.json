{
  "name": "@microsoft/interactive-documents-vscode",
  "displayName": "interactive-documents-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "interactive-documents-vscode.newIdoc",
        "title": "New Interactive Document (markdown)",
        "category": "Interactive Documents"
      },
      {
        "command": "interactive-documents-vscode.previewIdoc",
        "title": "Preview Interactive Document",
        "category": "Interactive Documents"
      },
      {
        "command": "interactive-documents-vscode.convertToHtml",
        "title": "Convert to HTML",
        "category": "Interactive Documents"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "interactive-documents-vscode.newIdoc",
          "when": "explorerResourceIsFolder",
          "group": "interactive-documents"
        },
        {
          "command": "interactive-documents-vscode.previewIdoc",
          "when": "resourceExtname == .md && resourceFilename =~ /\\.idoc\\.md$/",
          "group": "interactive-documents"
        },
        {
          "command": "interactive-documents-vscode.previewIdoc",
          "when": "resourceExtname == .json && resourceFilename =~ /\\.idoc\\.json$/",
          "group": "interactive-documents"
        },
        {
          "command": "interactive-documents-vscode.convertToHtml",
          "when": "resourceExtname == .md && resourceFilename =~ /\\.idoc\\.md$/",
          "group": "interactive-documents"
        }
      ],
      "editor/title/context": [
        {
          "command": "interactive-documents-vscode.previewIdoc",
          "when": "resourceExtname == .md && resourceFilename =~ /\\.idoc\\.md$/",
          "group": "interactive-documents"
        },
        {
          "command": "interactive-documents-vscode.previewIdoc",
          "when": "resourceExtname == .json && resourceFilename =~ /\\.idoc\\.json$/",
          "group": "interactive-documents"
        },
        {
          "command": "interactive-documents-vscode.convertToHtml",
          "when": "resourceExtname == .md && resourceFilename =~ /\\.idoc\\.md$/",
          "group": "interactive-documents"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "npm run resources",
    "resources": "node ./scripts/resources.mjs",
    "clean": "rimraf resources dist",
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  }
}